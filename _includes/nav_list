  <label for="ac-toc">{{ site.data.ui-text[site.locale].menu_label | default: "Toggle Menu" }}</label>
  <ul class="nav__items">
    {% for navname in include.nav %}
      {% assign navigation = site.data.navigation[navname] %}
      {% for nav in navigation %}
        {% assign has_active_child = false %}
        {% if nav.children != null %}
          {% for child in nav.children %}
            {% if child.url == page.url %}
              {% assign has_active_child = true %}
            {% endif %}
          {% endfor %}
        {% endif %}
        <li class="nav__item">
          {% if nav.children != null %}
            <input type="checkbox" id="nav-{{ forloop.parentloop.index }}-{{ forloop.index }}" class="nav__toggle"{% if has_active_child %} checked{% endif %} />
            <label for="nav-{{ forloop.parentloop.index }}-{{ forloop.index }}" class="nav__parent-title">
              <span class="nav__parent-text">
                {% if nav.url %}
                  <a href="{{ nav.url | relative_url }}">{{ nav.title }}</a>
                {% else %}
                  {{ nav.title }}
                {% endif %}
              </span>
              <span class="nav__toggle-icon">â–¼</span>
            </label>
            <ul class="nav__children">
              {% for child in nav.children %}
                <li><a href="{{ child.url | relative_url }}"{% if child.url == page.url %} class="active"{% endif %}>{{ child.title }}</a></li>
              {% endfor %}
            </ul>
          {% else %}
            {% if nav.url %}
              <a href="{{ nav.url | relative_url }}" class="nav__parent-title"><span class="nav__parent-text">{{ nav.title }}</span></a>
            {% else %}
              <span class="nav__parent-title"><span class="nav__parent-text">{{ nav.title }}</span></span>
            {% endif %}
          {% endif %}
        </li>
      {% endfor %}
    {% endfor %}
  </ul>
</nav>
